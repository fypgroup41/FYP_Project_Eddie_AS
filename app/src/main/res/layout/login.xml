<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="fill_parent"
              android:layout_width="fill_parent"
              android:orientation="vertical" 
              xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  <ImageView android:id="@+id/abcd"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:maxHeight="100dp"
    android:layout_gravity="center" 
    android:maxWidth="100dp"
    android:contentDescription=""  
    android:src="@drawable/logo"/>-->
    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:paddingTop="25sp"  
              android:text="@string/lblUserName"  
              android:textSize = "20sp"  />
    <EditText android:id="@+id/edit_username" 
              android:inputType="text"
              android:layout_height="wrap_content" 
              android:paddingTop="10sp"  
              android:layout_width="match_parent"/>
    <TextView android:layout_height="wrap_content"
              android:layout_width="wrap_content" 
              
              android:paddingTop="10sp" 
              android:text="@string/lblPassword"  
              android:textSize = "20sp"  />
    <EditText android:id="@+id/edit_password"
              android:inputType="textPassword"
              android:layout_height="wrap_content"
              android:paddingTop="10sp"  
              android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_marginTop="50dip"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:gravity="center">
        <Button android:id="@+id/Button01"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginTop="2sp"
                android:layout_gravity="center" 
                android:onClick="onClick2" 
                android:text="@string/btnClear"/>
        <Button android:id="@+id/Button012"
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1" 
                android:layout_marginTop="2sp" 
                android:layout_gravity="center" 
                android:onClick="onClick" 
                android:text="@string/btnLogin"/>
    </LinearLayout> 
    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:padding="3px"
        android:textSize="16dp"
        android:textStyle="bold"
        android:maxLines="15"
        android:scrollbars = "vertical"
        android:singleLine="false"
    />
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridViewObj"
        android:numColumns="auto_fit"
        android:gravity="center"
        android:columnWidth="50pt"
        android:stretchMode="columnWidth"/>
  
</LinearLayout>

